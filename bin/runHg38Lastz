#!/bin/bash -e
set -beEu -o pipefail

if [ $# != 1 ] ; then
    echo "wrong number of args: $0 targetGenome" >&2
    exit 1
fi

targetGenome="$1"
trackdir=$(realpath .)
targetGenomeDir=$(realpath ${trackdir}/../genome)

swapDir=${targetGenomeDir}/swap
swapOpt=-"-swapDir=${swapDir}"

doBlastzChainNet.pl DEF ${swapOpt} \
    -stop=net -syntenicNet -noDbNameCheck \
    -blastzOutRoot=${trackdir}/${targetGenome} \
    -bigClusterHub=ku -workhorse=hgwdev -priority=15


